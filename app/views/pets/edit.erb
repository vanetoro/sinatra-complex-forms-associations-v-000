<h1>Update Pet</h1>


<form action="/pets/<%=@pet.id%>/edit" method="post">
<label> Name: </label>
<input type="text" name='pet_name' value="<%= @pet.name%>">
<h3> Owners </h3>
<% @owners.each do |owner|%>
<input type="checkbox" name='owner_name' <%'checked' if @pet.owner.include? (owner)%>
<%end%>

</form>
